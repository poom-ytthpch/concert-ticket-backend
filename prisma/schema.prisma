generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoleType {
  ROOT
  ADMIN
  USER
}

enum ReservationStatus {
  PENDING
  RESERVED
  FAILED
  SOLD_OUT
  CANCELLED
}

model User {
  id           String        @id @default(uuid())
  username     String        @unique
  email        String        @unique
  password     String
  reservations Reservation[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  roles        Role[]
  activityLogs ActivityLog[]
  createdBy    String?
}

model Role {
  id        String   @id @default(cuid())
  type      RoleType
  createdAt DateTime
  updatedAt DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Concert {
  id             String        @id @default(uuid())
  name           String
  description    String?
  totalSeats     Int
  seatsAvailable Int
  reservations   Reservation[]
  createdAt      DateTime      @default(now())
  activityLogs   ActivityLog[]
  createdBy      String?
  updatedAt      DateTime?
  updateBy       String?

  @@index([name])
  @@index([createdBy])
}

model Reservation {
  id          String            @id @default(uuid())
  user        User              @relation(fields: [userId], references: [id])
  userId      String
  concert     Concert           @relation(fields: [concertId], references: [id])
  concertId   String
  status      ReservationStatus @default(PENDING)
  createdAt   DateTime          @default(now())
  cancelledAt DateTime?
}

model ActivityLog {
  id        String   @id @default(uuid())
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  concert   Concert? @relation(fields: [concertId], references: [id])
  concertId String?
  action    String
  createdAt DateTime @default(now())
}
